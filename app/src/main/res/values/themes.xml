<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ErjohnAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="searchViewStyle">@style/CustomSearchViewTextStyle</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.saving.nobar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">#2b3038</item>

        <!-- Defining that new color in ColorPrimaryDark -->
        <item name="colorPrimaryDark">#2b3038</item>
        <item name="colorAccent">#2b3038</item>

    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
    </style>

    <style name="CustomDialogtwo" parent="Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
        <item name="android:width">850dp</item>
    </style>

    <style name="CustomDialogthree" parent="Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
        <item name="android:width">850dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="CustomSearchViewTextStyle">
        <item name="android:textSize">@dimen/_30sdp</item> <!-- Adjust the text size as needed -->
    </style>

    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:searchIcon">@drawable/baseline_content_paste_search_24</item>
    </style>

</resources>