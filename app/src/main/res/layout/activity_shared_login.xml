<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:id="@+id/mainLinear"
    android:backgroundTint="@color/white"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".presenter.Activity.mainactivity.SharedLoginActivity">

    <LinearLayout
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cv_cv"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            app:cardUseCompatPadding="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtView"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/_12sdp"
                    android:text="ENTER PIN"/>

               <EditText
                   android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:inputType="number"
                    android:textSize="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/et_pin"/>

                <com.github.nikartm.button.FitButton
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:id="@+id/btn_pin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:gravity="center_vertical"
                    app:fb_cornerRadius="2dp"
                    app:fb_shape="rectangle"
                    app:fb_divColor="#fff"
                    app:fb_divWidth="2dp"
                    app:fb_divHeight="40dp"
                    app:fb_rippleColor="#FBE9E7"
                    app:fb_iconWidth="28dp"
                    app:fb_iconHeight="28dp"
                    app:fb_iconPosition="left"
                    app:fb_iconMarginStart="10dp"
                    app:fb_iconMarginEnd="10dp"
                    app:fb_icon="@drawable/baseline_login_24"
                    app:fb_iconColor="#FFF"
                    app:fb_textPaddingStart="16dp"
                    app:fb_textPaddingEnd="10dp"
                    app:fb_textColor="#FFF"
                    app:fb_text="GET EMPLOYEE"
                    app:fb_textSize="@dimen/_17sdp"
                    app:fb_backgroundColor="@color/teal_200"
                    android:layout_marginBottom="@dimen/_10sdp"/>



            </LinearLayout>





        </androidx.cardview.widget.CardView>


    </LinearLayout>

</LinearLayout>